; LEM1802 display driver

;------------------------------------------------------------------------------
:LEM1802_ID dat 0xffff
;------------------------------------------------------------------------------

;------------------------------------------------------------------------------
:LEM1802_INIT
;------------------------------------------------------------------------------
    jsr AG_THREAD_ENTER
        dat 7
    dat AG_CORE_GETII, 0x734d, 0xf615 ; Techcompliant ID (originally 7349f615)
    dat AG_CPU_FINDHWBYIDSS
    dat AG_CORE_STASI, LEM1802_ID
    dat AG_THREAD_EXIT

;------------------------------------------------------------------------------
:LEM1802_MEM_MAP_SCREEN
;------------------------------------------------------------------------------
    set a, 0
    set b, pop
    hwi [LEM1802_ID]
    sti pc, [i]
